<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    
    <data>
        <variable
            name="mostPopular"
            type="com.srk.nytimes.data.remote.model.MostPopular" />

        <variable
            name="handler"
            type="com.srk.nytimes.handler.MPItemHandler" />

        <variable
            name="imageType"
            type="com.srk.nytimes.utils.ImageType" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="6dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white"
        app:contentPadding="10dp"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:onClick="@{() -> handler.onItemClick(mostPopular)}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_thumb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_placeholder_small"
                app:item="@{mostPopular}"
                app:type="@{imageType.THUMB}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Title sdhakjhdkahsdhjkahdh sdhakjhdkahd asjdakhdjhad sdjkahha adajkhdkahd"
                android:text="@{mostPopular.title}"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/iv_thumb"
                app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="ByLine"
                android:text="@{mostPopular.byline}"
                android:textColor="@color/spanish_grey"
                app:layout_constraintStart_toEndOf="@+id/iv_thumb"
                app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/iv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_date"
                app:layout_constraintTop_toBottomOf="@+id/tv_source"
                app:layout_constraintEnd_toStartOf="@id/tv_date" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Date"
                android:text="@{mostPopular.publishedDate}"
                android:textColor="@color/spanish_grey"
                app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
                app:layout_constraintTop_toBottomOf="@+id/tv_source"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="5dp"
                android:maxLines="1" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    
</layout>